@model IEnumerable<MVCFIZZBUZZ.Models.DetailsModel>

@{
    ViewBag.Title = "Details";
}
<style type="text/css">
    .wizard-step {
        display: none;
    }
</style>
<script src="@Url.Content("~/Scripts/jquery-1.3.2.min.js")" type="text/javascript"></script>
<script type="text/javascript">

    </script>

<table width="100%" border="1" class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Details)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) 
{
    var colorcode = item.Details;
    
        
            <tr>
                @{
                if (colorcode == "fizz")
                {
                <td style="Background-color : blue; width:25%">
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                }
                else if(colorcode == "buzz")
                { 
                <td style="Background-color : green;width:25%">
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                }
                else
                {
                    <td style="Background-color : white;width:25%">
                        @Html.DisplayFor(modelItem => item.Details)
                    </td>
                }
}

            </tr>
}
    <tr>
        <td>
            @if (ViewBag.Page > 0)
            {
                <a href="@Url.Action("Details", new { page = ViewBag.Page - 1 })"
                   class="btn btn-default">
                    &laquo; Prev
                </a>
            }
            @if (ViewBag.Page < ViewBag.MaxPage)
            {
                <a href="@Url.Action("Details", new { page = ViewBag.Page + 1 })"
                   class="btn btn-default">
                    Next &raquo;
                </a>
            }
        </td>
    </tr>
</table>
